
@{
    ViewBag.Title = "Create";
}
<form action="~/home/create" method="post">
    <div class="row">
        <div class="col-xl-3">
            <label for="Name">Name</label>
            <input type="text"
                   class="form-control-color"
                   id="Name"
                   name="Name"
                   placeholder="Name" />
        </div>
        <div class="col-xl-3">
            <label for="Email">Email</label>
            <input type="email"
                   class="form-control-color"
                   id="Email"
                   name="Email"
                   placeholder="Email" />
        </div>
        <div class="col-xl-3">
            <label for="CheckIn">Check In</label>
            <input type="date"
                   class="form-control-color"
                   id="CheckIn"
                   name="CheckIn"
                   placeholder="Check In" />
        </div>
        <div class="col-xl-3">
            <label for="CheckOut">Check Out</label>
            <input type="date"
                   class="form-control-color"
                   id="CheckOut"
                   name="CheckOut"
                   placeholder="Check Out" />
        </div>
        <div class="col-xl-3">
            <label for="Adults">Adults</label>
            <input type="number"
                   class="form-control-color"
                   id="Adults"
                   name="Adults"
                   placeholder="Adults" />
        </div>
        <div class="col-xl-3">
            <label for="Children">Children</label>
            <input type="number"
                   class="form-control-color"
                   id="Children"
                   name="Children"
                   placeholder="Children" />
        </div>
        <div class="col-xl-3">
            <label for="NumberRoom">NumberRoom</label>
            <input type="number"
                   class="form-control-color"
                   id="NumberRoom"
                   name="NumberRoom"
                   placeholder="NumberRoom" />
        </div>
        <div class="col-xl-3">
            <label for="TypeRoom">TypeRoom</label>
            <select class="form-control-color"
                   id="RoomId"
                   name="RoomId"
                   placeholder="TypeRoom" >
                <option value="">Please Select </option>
                @foreach(var room in ViewBag.Room)
            {
                <option value="@room.ID">@room.Name</option>
            }
            </select>
        </div>
    </div>
    <div>
        <button type="submit" class="bg-body-secondary">Submit</button>
    </div>
</form>


